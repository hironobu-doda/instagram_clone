<p id="notice"><%= notice %></p>

<h1>投稿一覧</h1>

<td><%= link_to 'お気に入り画面へGO!!', favorites_path %></td>
<%= link_to '新規投稿', new_picture_path %>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>name</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <% if picture.image.url %>
            <td><%= image_tag (picture.image.url) %></td>
        <% end %>


        <td>投稿者：<%= picture.user.name %></td>

        <td><%= picture.title %></td>
        <td><%= picture.content %></td>
        <td><%= link_to 'Show', picture %></td>
        <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
        <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規投稿', new_picture_path %>
