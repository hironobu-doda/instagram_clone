<h1>お気に入り</h1>

<%= link_to '一覧画面へ', pictures_path %>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorites.each do |favorite| %>
      <tr>
        <% if favorite.picture.image.url %>
            <td><%= image_tag (favorite.picture.image.url) %></td>
        <% end %>
        <td>投稿者：<%= favorite.picture.user.name %></td>
        <td><%= favorite.picture.title %></td>
        <td><%= favorite.picture.content %></td>
        <td><%= link_to 'Show', favorite.picture %></td>
      </tr>
    <% end %>
  </tbody>
</table>

