<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>お気に入り</h1>

  <ul><%= link_to '一覧画面へ', pictures_path %></ul>

  <table>
    <thead>
      <tr>
        <!-- <th>Image</th>
        <th>Title</th>
        <th>Content</th>
        <th colspan="3"></th>
      </tr> -->
    </thead>

    <tbody>
      <% @favorites.each do |favorite| %>

        <div class="col-md-6">

          <ul class="row row2">

            <li><h3>投稿者：<%= favorite.picture.user.name %></h3></li>
            <% if favorite.picture.image.url %>
                <li><%= image_tag (favorite.picture.image.url) %></li>
            <% end %>
            <li>タイトル：<%= favorite.picture.title %></li>
            <li><%= favorite.picture.content %></li>
            <li><%= link_to '確認', favorite.picture %></li>
          </ul>

        </div>

      <% end %>
    </tbody>
  </table>

  <br>

</div>
