<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "件のエラー") %> </h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :user_name %>
  </div>

  <div class="field">
    <%= form.label :mail %>
    <%= form.text_field :mail, id: :user_mail %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= password_field :password, id: :user_password %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation %>
    <%= password_field :password_confirmation, id: :user_password_confirmation %>
  </div>

  <div class="field">
    <%= form.label :プロフィール画像 %>
    <%= form.file_field :profile_image %>
  </div>

  <div class="field">
    <%= form.label :プロフィール内容 %>
    <%= form.text_area :profile_content, id: :user_profile_content %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
